pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pip install --upgrade pip'
                sh 'pip install -r requirements.txt'
            }
        }

        stage('Run ML Pipeline') {
            steps {
                sh 'python main.py'
            }
        }

        stage('Verify Model Saving') {
            steps {
                script {
                    if (!fileExists('best_model.pkl')) {
                        error("Model file not found. Pipeline FAILED.")
                    } else {
                        echo "Model saved successfully!"
                    }
                }
            }
        }
    }
}
